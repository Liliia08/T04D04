<UserControl xmlns="https://github.com/avaloniaui"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
             mc:Ignorable="d" d:DesignWidth="800" d:DesignHeight="450"
             x:Class="CampusBenchDesktop.Pages.OrdersPage">
    <Grid>
        <Grid.ColumnDefinitions>
            <ColumnDefinition Width="auto"></ColumnDefinition>
            <ColumnDefinition></ColumnDefinition>
        </Grid.ColumnDefinitions>
        <StackPanel>
            <Button Name="BAdd"
                    Content="Сделать заказ"
                    Click="BAdd_OnClick"/>
            <Button Name="BEdit"
                    Content="Изменить заказ"
                    Click="BEdit_OnClick"/>
            <Button Name="BRemove"
                    Content="Удалить заказ"
                    Click="BRemove_OnClick"/>
            
        </StackPanel>
        
        <DataGrid Grid.Column="1" Name="DGOrder" 
                  AutoGenerateColumns="False"
                  IsReadOnly="True">
            <DataGrid.Columns>
                <DataGridTextColumn Header="Название заказа"
                                    Binding="{Binding name}"></DataGridTextColumn>
                <DataGridTextColumn Header="Дата заказа"
                                    Binding="{Binding dateTime, StringFormat='HH:mm dd.MM'}"></DataGridTextColumn>
                <DataGridTemplateColumn Header="Состав">
                    <DataGridTemplateColumn.CellTemplate>
                        <DataTemplate>
                            <ListBox ItemsSource="{Binding products}">
                                <ListBox.ItemTemplate>
                                    <DataTemplate>
                                        <TextBlock Text="{Binding name}"></TextBlock>
                                    </DataTemplate>
                                </ListBox.ItemTemplate>
                            </ListBox>
                        </DataTemplate>
                    </DataGridTemplateColumn.CellTemplate>
                </DataGridTemplateColumn>
                
            </DataGrid.Columns>
        </DataGrid>
    </Grid>
</UserControl>
